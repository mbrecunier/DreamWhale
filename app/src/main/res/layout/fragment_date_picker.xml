<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.dreamwhale.ui.DatePickerFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="When was your dream?"
        android:id="@+id/datePromptTextView"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="20dp" />

    <DatePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_navigate_next_black_24dp"
        android:layout_gravity="right|center_vertical" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_navigate_back_black_24dp"
        android:layout_gravity="left|center_vertical" />

</FrameLayout>
